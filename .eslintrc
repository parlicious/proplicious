{
	"extends" : [
		"eslint:recommended",
		"plugin:vue/recommended"
	],
	"plugins" : [
		"vue"
	],
	"parserOptions" : {
		"ecmaVersion" : 2018
	},
	"env" : {
		"es6" : true,
		"browser" : true,
		"node" : true,
		"mocha" : true
	},
	"rules" : {
		"semi": [1, "always"],
		"vue/html-indent" : ["warn", 4]
	}
}